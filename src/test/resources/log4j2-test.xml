<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{DEFAULT} %-5p %c{1}:%L %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- ReplicaDB application logger -->
        <Logger name="org.replicadb" level="info" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        
        <!-- Silence noisy external libraries during tests -->
        <Logger name="org.apache.http" level="error"/>
        <Logger name="org.apache.http.wire" level="off"/>
        <Logger name="org.apache.http.headers" level="error"/>
        <Logger name="org.apache.orc" level="warn"/>
        <Logger name="org.apache.hadoop" level="warn"/>
        <Logger name="org.mongodb" level="warn"/>
        <Logger name="com.mongodb" level="warn"/>
        <Logger name="com.github.dockerjava" level="warn"/>
        <Logger name="com.github.dockerjava.zerodep.shaded" level="off"/>
        <Logger name="org.testcontainers" level="info"/>
        <Logger name="org.testcontainers.shaded" level="warn"/>
        <Logger name="org.testcontainers.utility" level="warn"/>
        <Logger name="io.debezium" level="warn"/>
        
        <!-- Database drivers -->
        <Logger name="com.microsoft.sqlserver" level="warn"/>
        <Logger name="oracle" level="warn"/>
        <Logger name="com.zaxxer.hikari" level="warn"/>
        
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>
